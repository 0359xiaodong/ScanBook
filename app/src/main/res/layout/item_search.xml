<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/search_item_bg"
    android:minHeight="100dp"
    android:layout_height="100dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:background="@drawable/corners"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_height="fill_parent">
        <ImageView
            android:id="@+id/iv_search_icon"
            android:layout_width="100dp"
            android:src="@drawable/defaultbook"
            android:scaleType="centerCrop"
            android:layout_height="fill_parent" />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/tv_search_item_title"
                android:layout_width="wrap_content"
                android:text="盗墓笔记"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_search_item_author"
                android:layout_width="fill_parent"
                android:layout_below="@id/tv_search_item_title"
                android:text="南派三叔 / 中国友谊出版公司 / 2007-1 / 26.80元"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentBottom="true"
                android:id="@+id/tv_search_item_score"
                android:layout_width="fill_parent"
                android:text="8.2 (897人评价)"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
